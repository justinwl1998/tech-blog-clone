<div class="newPostFormContainer row mb-4">
    <form class="newPostForm" id="usrform">
        <label for="newpostTitle" id="postTitle">Post Title:</label>
        <input type="text" id="newpostTitle" name="newpostTitle">
        <label for="newPostField">Post Body:</label>
        <textarea id="newPostField" id="postBody" name="newpostBody" form="usrform" placeholder="Enter post here..."></textarea>
        <input type="submit" value="Submit">
    </form>
</div>

{{#each posts as |post|}}
<div class="row mb-4 post-header">
    <div class="col mb-9 title">
        <a href="/post/{{post.id}}"><h2 align="left">{{post.title}}</h2></a>
    </div>
    <div class="col mb-3 date">
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
</div>
<div class="row mb-4 post-content">
    <p>{{post.description}}</p>
</div>
{{/each}}

<script src="/js/dashboard.js"></script>