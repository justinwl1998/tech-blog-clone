<div class="postContainer">
    <div class="row mb-4 title">
        <h2>{{title}}</h2>
    </div>
    <div class="row mb-4 date">
        <p>Created by {{user.name}} on {{format_date date_created}}, 
            {{#if date_updated}}
            <em>updated on {{format_date date_updated}}</em>
            {{/if}}     
        </p>
    </div>
    <div class="row mb-4 post-content">
        <p>{{description}}</p>
    </div>
</div>

